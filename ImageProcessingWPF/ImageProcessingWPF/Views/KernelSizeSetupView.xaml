<UserControl x:Class="ImageProcessingWPF.Views.KernelSizeSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProcessingWPF.Views"
             mc:Ignorable="d" Height="auto" Width="auto">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Kernel size: "/>
        <TextBlock Text="width: "/>
        <TextBox Text="{Binding Width}" FontSize="18" VerticalAlignment="Center" Width="30"  Margin="0,0,5,0"/>
        <TextBlock Text="height: "/>
        <TextBox Text="{Binding Height}" FontSize="18" VerticalAlignment="Center" Width="30"  Margin="0,0,5,0"/>
        <Button Content="Set Size"/>
    </StackPanel>
</UserControl>
